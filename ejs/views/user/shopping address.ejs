        <div class="shipping-address">
            <h3>Shipping Address</h3>
            
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="first-name">First name *</label>
                    <input type="text" id="first-name" name="first-name" value="m" required>
                </div>
        
                <div class="form-group">
                    <label for="last-name">Last name *</label>
                    <input type="text" id="last-name" name="last-name" value="k" required>
                </div>
        
                <div class="form-group">
                    <label for="company">Company name (optional)</label>
                    <input type="text" id="company" name="company">
                </div>
        
                <div class="form-group">
                    <label for="country">Country / Region *</label>
                    <select id="country" name="country" required>
                        <option value="">Select a country / region…</option>
                        <option value="india" selected>India</option>
                        <!-- Add more countries here as needed -->
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="street-address">Street address *</label>
                    <input type="text" id="street-address" name="street-address" value="House number and street name" required>
                </div>
        
                <div class="form-group">
                    <label for="apartment">Apartment, suite, unit, etc. (optional)</label>
                    <input type="text" id="apartment" name="apartment">
                </div>
        
                <div class="form-group">
                    <label for="town">Town / City *</label>
                    <input type="text" id="town" name="town" value="City Name" required>
                </div>
        
                <div class="form-group">
                    <label for="state">State *</label>
                    <select id="state" name="state" required>
                        <option value="">Select an option…</option>
                        <option value="punjab" selected>Punjab</option>
                        <!-- Add more states here as needed -->
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="zip">ZIP Code *</label>
                    <input type="text" id="zip" name="zip" value="12345" required>
                </div>
        
                <button type="submit">Save Address</button>
            </form>
        </div>
